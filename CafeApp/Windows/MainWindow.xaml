<Window x:Class="CafeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CafeApp"
        mc:Ignorable="d"
        Title="Samurai"
        Height="1194"
        Width="834"
        FontFamily="Nunito Sans" 
        WindowStartupLocation="CenterOwner"
        Background="Black"
        Foreground="White"
        WindowStyle="ThreeDBorderWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48px"/>
            <RowDefinition Height="175px"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="51px"/>
            <RowDefinition Height="48px"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="48px"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="48px"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="SAMURAI" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Locked Monster" FontSize="60"/>
        <Frame Grid.Row="2" Grid.Column="1" NavigationUIVisibility="Hidden" x:Name="MainFrame" FontSize="16px"></Frame>
    </Grid>
</Window>
